:sass
  #content-wrap
    margin-top: 50px
    margin-left: auto
    margin-right: auto
    width: 100%

  #login_content
    display: flex
    justify-content: center

  #login_actions
    display: flex
    flex-direction: column

#content-wrap
  #login_content
    = image_tag 'logos/book-512x512.png', width: '350px', height: '350px', style: 'margin-right: 50px'

    #login_actions
      %h2 E-Library Login
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }
          = f.input :password, required: false, input_html: { autocomplete: "current-password" }
          = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-actions
          = f.button :submit, 'Login', class: 'btn btn-info'
      = render "devise/shared/links"
